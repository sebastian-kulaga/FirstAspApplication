@model FirstAspApplication.ViewModels.HomeViewModel
<div>
    <h1>@Model.Title</h1>
</div>

<div class="row">
    @foreach (var car in Model.Cars)
    {
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="img-thumbnail">
                <img src="@Url.Content(car.ImageThumbnailUrl)" class="img-fluid" alt="">
                <div class="figure-caption">
                    <h3>@car.Price.ToString("C")</h3>
                    <h3>@car.Model</h3>
                    <h3>@car.HorsePower</h3>
                    <p>@car.ShortDescription</p>
                </div>
            </div>
        </div>
    }
</div>

